# Ejemplo de configuración para automate-modbus-rs485-logger

# Parámetros de logging
LOG_LEVEL=INFO
LOG_MESSAGE_MAX_LENGTH=120

# Parámetros de conexión Modbus
MODBUS_PORT=COM3
MODBUS_SLAVE_ID=1
MODBUS_BAUDRATE=9600
MODBUS_PARITY=E
MODBUS_STOPBITS=1
MODBUS_TIMEOUT=0.5

# Parámetros de reconexión/backoff Modbus
# Número máximo de reintentos ante error de comunicación
MODBUS_MAX_RETRIES=3
# Tiempo inicial de espera entre reintentos (segundos)
MODBUS_BACKOFF_INITIAL=1
# Factor de backoff exponencial (multiplica el tiempo de espera en cada intento)
MODBUS_BACKOFF_FACTOR=2